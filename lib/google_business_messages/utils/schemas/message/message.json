{
  "$schema": "http://json-schema.org/draft-06/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "messageId": {
      "type": "integer"
    },
    "representative": {
      "$ref": "representative.json"
    },
    "suggestions": {
      "type": "array",
      "items": {
        "$ref": "suggestion.json"
      }
    },
    "fallback": {
      "type": "string"
    },
    "containsRichText": {
      "type": "boolean"
    }
  },
  "oneOf": [
    {
      "required": ["text"],
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        }
      }
    },
    {
      "required": ["image"],
      "properties": {
        "image": {
          "$ref": "image.json"
        }
      }
    },
    {
      "required": ["richCard"],
      "properties": {
        "richCard": {
          "$ref": "rich_card.json"
        }
      }
    }
  ],
  "required": ["name", "messageId", "representative"]
}